{
  "name": "metaphone",
  "version": "1.0.1",
  "description": "Fast Metaphone implementation",
  "license": "MIT",
  "keywords": [
    "natural",
    "language",
    "phonetics",
    "lawrence",
    "philips",
    "metaphone",
    "cli",
    "bin"
  ],
  "dependencies": {},
  "bin": "cli.js",
  "files": [
    "cli.js",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/metaphone.git"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^8.4.0",
    "remark-cli": "^2.1.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.6.2",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js -s metaphone > metaphone.js",
    "build-mangle": "esmangle metaphone.js > metaphone.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "rules": {
      "complexity": "off"
    },
    "ignore": [
      "metaphone.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
